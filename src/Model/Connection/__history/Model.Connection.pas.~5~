function Connected: Integer;
begin
  if not Assigned(FConnList) then
    FConnList := TObjectList<TFDConnection>.Create;

  FConnList.Add(TFDConnection.Create(Nil));
  Result:= Pred(FConnList.Count);

  FConnList.Items[IndexConn].Params.DriverID := 'FB';
  FConnList.Items[IndexConn].Params.Database := 'C:\BancosFirebird\TESTE.FDB';
  FConnList.Items[IndexConn].Params.UserName := 'SYSDBA';
  FConnList.Items[IndexConn].Params.Password := 'masterkey';
  FConnList.Items[IndexConn].Params.Add('Port=3050');
  FConnList.Items[IndexConn].Params.Add('CharacterSet=win1252');
  FConnList.Items[IndexConn].Params.Add('Protocol= ipTCPIP');
  FConnList.Items[IndexConn].Params.Add('Server=127.0.0.1');
  FConnList.Items[IndexConn].Connected;


end;

end.
